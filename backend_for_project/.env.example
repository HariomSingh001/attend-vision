# Supabase Configuration
SUPABASE_URL=your-supabase-url-here
SUPABASE_KEY=your-supabase-anon-key-here

# Email Configuration (Required for Attendance Alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here
FROM_NAME=Attendance System

# Face Recognition Settings
FACE_MIN_CONFIDENCE=0.70
FACE_MIN_CONFIDENCE_MARGIN=0.10
MIN_FACE_SIZE=60
BLUR_THRESHOLD=50.0
LIVENESS_THRESHOLD=0.4

# Attendance Alert Settings
ATTENDANCE_THRESHOLD=75.0

# Optional Settings
IDENTITY_DISTANCE_SCALE=1.6
IDENTITY_REQUIRED_SIGHTINGS=2
IDENTITY_WINDOW_SECONDS=8
IDENTITY_CONFIDENCE_THRESHOLD=0.65
IDENTITY_CONFIDENCE_DECAY=0.05
IDENTITY_CONFIDENCE_MIN=0.4
